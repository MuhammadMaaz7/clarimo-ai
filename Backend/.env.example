# Database Configuration
MONGODB_URL=mongodb://localhost:27017/clarimo_ai

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Clarimo AI

# External APIs (Optional)
OPENAI_API_KEY=your-openai-api-key-here
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# HuggingFace Local LLM (FREE - CPU, No GPU needed, Perfect for demos)
USE_HUGGINGFACE_LLM=true
HF_MODEL=google/flan-t5-small

# Ollama Local LLM (FREE - GPU-accelerated, Optional)
USE_LOCAL_LLM=false
LOCAL_LLM_MODEL=llama3.2:3b

# Groq API Configuration (Primary - Fast & Efficient)
GROQ_API_KEY=your-groq-api-key-here

# Groq Fallback Keys (Optional - for rate limit handling)
GROQ_API_KEY_2=your-second-groq-key-here
GROQ_API_KEY_3=your-third-groq-key-here
GROQ_API_KEY_4=your-fourth-groq-key-here
GROQ_API_KEY_5=your-fifth-groq-key-here

# OpenRouter API Configuration (Fallback)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_API_KEY_2=your-second-openrouter-key-here
OPENROUTER_API_KEY_3=your-third-openrouter-key-here

# Google Search API Configuration (Primary)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id-here

# Google Search Fallback Keys (Optional - for rate limit handling)
GOOGLE_API_KEY_2=your-second-google-key-here
GOOGLE_SEARCH_ENGINE_ID_2=your-second-search-engine-id-here
GOOGLE_API_KEY_3=your-third-google-key-here
GOOGLE_SEARCH_ENGINE_ID_3=your-third-search-engine-id-here

# Product Hunt API
PRODUCT_HUNT_API_KEY=your-product-hunt-api-key-here

# Development
DEBUG=True
ENVIRONMENT=development